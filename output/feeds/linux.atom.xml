&lt;span class="w"&gt;    &lt;/span&gt;&lt;span class="n"&gt;devnode&lt;/span&gt;&lt;span class="w"&gt; &lt;/span&gt;&lt;span class="ss"&gt;&amp;quot;^sd[abc]&amp;quot;&lt;/span&gt;&lt;span class="w"&gt;&lt;/span&gt;
